<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ba.unsa.etf.pkks.sil.myapplication.AddBook">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_book_show"
        android:text="Pocetak je ovdje... e sad sto ce dalje biti ne znam"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="horizontal">


        <EditText android:id="@+id/edit_search_isbn"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:hint="@string/enter_isbn"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_search"
            android:onClick="searchBooks"
            />
    </LinearLayout>
</RelativeLayout>
